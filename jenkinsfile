pipeline{
    agent any
    environment {
        IMGAE = "ll3lue/test"
        TAG = "test-build"
    }
    stages{
        stage("Init"){
            steps{
                echo "Init"
                echo "*****************************"
                sh "ls -la"
                echo "Init Completed."
            }
        }
        stage("Build"){
            steps{
                echo "Build"
                echo "*****************************"
                sh "docker build --no-cache -t ${env.IMGAE}:${env.TAG}"
                echo "Build Completed."
            }
        }
    }
}